@model Model.Newsinfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <div style="margin-left:25px;">
            <h1 style="color:#333">@Model.Title</h1>
            <h4 style="color:#666">发布人：@Model.Userinfo.Uname (编辑时间:@Model.Inputdate)</h4>
        </div>

        <p></p>

        <div style="border:2px solid #0B96CD;font-weight:bold;border-radius:6px;">
            @Html.Newsinfodiv(Model.Content)
        </div>

    </div>
     <div style="margin-left:25px;">
         <h3 style="color:#333">发布人备注信息</h3>
         @Model.Other
     </div>

    
</body>
</html>
